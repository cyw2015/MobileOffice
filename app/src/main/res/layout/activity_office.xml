<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    tools:context="com.cyw.mobileoffice.activity.OfficeActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/ly_top_bar"
        android:background="@color/bg_topbar"
        >
        <TextView
            android:id="@+id/txt_topbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="信息"
            android:textColor="@color/text_topbar"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:background="@color/div_white"
          />
    </RelativeLayout>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rg_tab_bar"
        android:layout_alignParentBottom="true"
        android:background="@color/bg_white"
        android:orientation="horizontal"
        >
        <RadioButton
            android:id="@+id/rb_contacts"
            style="@style/tab_menu_item"
            android:drawableTop="@drawable/tab_menu_contacts"
            android:text="@string/tab_menu_contacts"
            android:textSize="15sp"
            />
        <RadioButton
            android:id="@+id/rb_message"
            style="@style/tab_menu_item"
            android:drawableTop="@drawable/tab_menu_message"
            android:text="@string/tab_menu_message"
            android:textSize="15sp"
            />
        <RadioButton
            android:id="@+id/rb_facility"
            style="@style/tab_menu_item"
            android:drawableTop="@drawable/tab_menu_facility"
            android:text="@string/tab_menu_facility"
            android:textSize="15sp"
            />
        <RadioButton
            android:id="@+id/rb_setting"
            style="@style/tab_menu_item"
            android:drawableTop="@drawable/tab_menu_mysetting"
            android:text="@string/tab_menu_mysetting"
            android:textSize="15sp"
            />
    </RadioGroup>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/div_tab_bar"
        android:layout_above="@id/rg_tab_bar"
        android:background="@color/div_white"
        />
    <android.support.v4.view.ViewPager
        android:id="@+id/vpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/div_tab_bar"
        android:layout_below="@id/ly_top_bar"
        />
</RelativeLayout>
